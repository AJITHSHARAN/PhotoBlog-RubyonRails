<h1>signup</h1>

<%= form_tag("auth/signup", method: "post") do %>
  <%= label_tag(:name, "username:") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:email, "email:") %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password, "password:") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("signup") %>
<% end %>